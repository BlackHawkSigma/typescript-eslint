{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "allowJs": true,
    // no need for type declarations as this isn't a consumed library module
    "declaration": false,
    "declarationMap": false,
    "esModuleInterop": true,
    "jsx": "react",
    "lib": ["DOM", "ESNext"],
    "noEmit": true,
    "noImplicitAny": false,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "@site/*": ["./*"]
    },
    "types": ["@docusaurus/module-type-aliases", "@docusaurus/theme-classic"]
  },
  "include": [
    "src",
    "tests",
    "tools",
    "plugins",
    "typings",
    "sidebars/*.js",
    "./*.ts"
  ]
}
